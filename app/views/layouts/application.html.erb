<!DOCTYPE html>
<html>
  <head>
    <title>KitHub</title>
    <%= csrf_meta_tags %>
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

    <!-- d3 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/4.2.8/d3.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Cutive+Mono" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch" rel="stylesheet">


    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>


  </head>

  <body <%= content_for :angular_app %> >
    <nav class="navbar navbar-light bg-faded">
      <a class="navbar-brand" href="#">KitHub</a>
      <% if teacher_signed_in? %>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= root_path %>" >Overview</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= gradebook_path %>" >Gradebook</a>
          </li>
        </ul>
      <% end %>
      <% if controller_name == 'kithub' %>
        <form class="form-inline center-form">
          <input class="form-control" type="text" placeholder="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      <% end %>
      <ul class="nav navbar-nav pull-xs-right">
      <% if teacher_signed_in? %>
        <li class="nav-item">
          <a class="nav-link" href="" ><%= current_teacher.first_name %></a>
        </li>
        <li class="nav-item">
          <%= link_to "Logout",  destroy_teacher_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_teacher_session_path %>" >Login</a>
        </li>
      <% end %>
      </ul>

    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
